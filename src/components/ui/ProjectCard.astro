---
interface Props {
  title: string;
  description: string;
  image: string;
  tags: string[];
  status: 'active' | 'archived' | 'pending';
  url?: string;
  featured?: boolean;
  year: string;
}

const { title, description, image, tags, status, url, featured = false, year } = Astro.props;

// Determinar el badge seg√∫n el estado
const statusConfig = {
  active: { label: 'Activo', icon: '‚úÖ', color: 'success' },
  archived: { label: 'Finalizado', icon: 'üì¶', color: 'archived' },
  pending: { label: 'Pendiente', icon: '‚è≥', color: 'pending' }
};

const statusInfo = statusConfig[status];
---

<article class={`project-card ${status === 'archived' ? 'archived' : ''} ${featured ? 'featured' : ''}`}>
  {featured && <div class="featured-badge">‚≠ê Destacado</div>}
  
  <!-- Imagen del proyecto -->
  <div class="project-image">
    <img 
      src={`${import.meta.env.BASE_URL}/${image.startsWith('/') ? image.slice(1) : image}`}
      alt={title}
      loading="lazy"
      width="400"
      height="300"
    />
    <div class="project-overlay">
      {url && (
        <a 
          href={url} 
          target="_blank" 
          rel="noopener noreferrer"
          class="btn-view"
          aria-label={`Ver proyecto ${title}`}
        >
          üîó Ver Sitio
        </a>
      )}
    </div>
  </div>
  
  <!-- Contenido del proyecto -->
  <div class="project-content">
    <div class="project-header">
      <h3 class="project-title">{title}</h3>
      <span class={`project-status status-${statusInfo.color}`}>
        {statusInfo.icon} {statusInfo.label}
      </span>
    </div>
    
    <p class="project-description">{description}</p>
    
    <div class="project-meta">
      <span class="project-year">üìÖ {year}</span>
    </div>
    
    <!-- Tags de tecnolog√≠as -->
    <div class="project-tags">
      {tags.map((tag) => (
        <span class="tag">{tag}</span>
      ))}
    </div>
  </div>
</article>

<style>
  .project-card {
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    height: 100%;
    position: relative;
  }
  
  .project-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }
  
  /* Proyectos archivados con opacidad reducida */
  .project-card.archived {
    opacity: 0.7;
  }
  
  .project-card.archived:hover {
    opacity: 1;
  }
  
  /* Badge de destacado */
  .featured-badge {
    position: absolute;
    top: var(--space-md);
    right: var(--space-md);
    background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-secondary-light) 100%);
    color: var(--color-text);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    font-size: var(--text-xs);
    font-weight: 700;
    z-index: 2;
    box-shadow: var(--shadow-md);
  }
  
  /* Imagen del proyecto */
  .project-image {
    position: relative;
    width: 100%;
    height: 220px;
    overflow: hidden;
    background: var(--color-background-secondary);
  }
  
  .project-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-slow);
  }
  
  .project-card:hover .project-image img {
    transform: scale(1.05);
  }
  
  /* Overlay con bot√≥n */
  .project-overlay {
    position: absolute;
    inset: 0;
    background: rgba(0, 61, 166, 0.9);
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity var(--transition-base);
  }
  
  .project-card:hover .project-overlay {
    opacity: 1;
  }
  
  .btn-view {
    background: white;
    color: var(--color-primary);
    padding: var(--space-sm) var(--space-xl);
    border-radius: var(--radius-md);
    font-weight: 600;
    text-decoration: none;
    transition: all var(--transition-fast);
    box-shadow: var(--shadow-lg);
  }
  
  .btn-view:hover {
    background: var(--color-secondary);
    color: var(--color-text);
    transform: scale(1.05);
  }
  
  /* Contenido */
  .project-content {
    padding: var(--space-lg);
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
    flex: 1;
  }
  
  .project-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-sm);
  }
  
  .project-title {
    font-size: var(--text-xl);
    font-weight: 700;
    color: var(--color-text);
    margin: 0;
    line-height: 1.3;
    flex: 1;
  }
  
  /* Estado del proyecto */
  .project-status {
    font-size: var(--text-xs);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    font-weight: 600;
    white-space: nowrap;
    flex-shrink: 0;
  }
  
  .status-success {
    background: rgba(34, 197, 94, 0.1);
    color: #16a34a;
    border: 1px solid rgba(34, 197, 94, 0.2);
  }
  
  .status-archived {
    background: rgba(156, 163, 175, 0.1);
    color: #6b7280;
    border: 1px solid rgba(156, 163, 175, 0.2);
  }
  
  .status-pending {
    background: rgba(251, 191, 36, 0.1);
    color: #d97706;
    border: 1px solid rgba(251, 191, 36, 0.2);
  }
  
  .project-description {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
    flex: 1;
  }
  
  .project-meta {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }
  
  .project-year {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    font-weight: 500;
  }
  
  /* Tags */
  .project-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-top: auto;
  }
  
  .tag {
    font-size: var(--text-xs);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: all var(--transition-fast);
  }
  
  .tag:hover {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }
  
  /* Dark mode adjustments */
  [data-theme="dark"] .project-card {
    background: var(--color-background-secondary);
  }
  
  [data-theme="dark"] .project-overlay {
    background: rgba(74, 127, 255, 0.9);
  }
  
  [data-theme="dark"] .status-success {
    background: rgba(34, 197, 94, 0.2);
    color: #4ade80;
  }
  
  [data-theme="dark"] .status-archived {
    background: rgba(156, 163, 175, 0.2);
    color: #9ca3af;
  }
  
  [data-theme="dark"] .status-pending {
    background: rgba(251, 191, 36, 0.2);
    color: #fbbf24;
  }
</style>