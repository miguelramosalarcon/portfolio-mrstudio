---
import experienceData from '../../data/experience.json';
---

<section id="experiencia" class="experience-section section">
  <div class="container">
    <!-- Header -->
    <div class="section-header">
      <h2 class="section-title">
        <span class="title-icon">ðŸ’¼</span>
        Experiencia Profesional
      </h2>
      <p class="section-subtitle">
        {experienceData.length} empresas | +{experienceData.reduce((acc, exp) => {
          const years = exp.period.match(/\d{4}/g);
          if (years && years.length === 2) {
            return acc + (parseInt(years[1]) - parseInt(years[0]));
          }
          return acc + 1;
        }, 0)} aÃ±os de experiencia
      </p>
    </div>
    
    <!-- Timeline -->
    <div class="timeline">
      {experienceData.map((job, index) => (
        <article class="timeline-item">
          <!-- Timeline Dot -->
          <div class="timeline-dot"></div>
          
          <!-- Timeline Line (no mostrar en el Ãºltimo) -->
          {index < experienceData.length - 1 && (
            <div class="timeline-line"></div>
          )}
          
          <!-- Content Card -->
          <div class="timeline-content">
            <!-- Header -->
            <div class="job-header">
              <div class="job-main">
                <h3 class="job-company">{job.company}</h3>
                <p class="job-position">{job.position}</p>
              </div>
              <span class="job-period">{job.period}</span>
            </div>
            
            <!-- Achievements -->
            <div class="job-achievements">
              <h4 class="achievements-title">Logros principales:</h4>
              <ul class="achievements-list" role="list">
                {job.achievements.map((achievement) => (
                  <li class="achievement-item">
                    <span class="achievement-bullet">âœ“</span>
                    {achievement}
                  </li>
                ))}
              </ul>
            </div>
            
            <!-- Tags -->
            <div class="job-tags">
              {job.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </div>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .experience-section {
    background: var(--color-background);
  }
  
  /* Header */
  .section-header {
    text-align: center;
    margin-bottom: var(--space-3xl);
  }
  
  .section-title {
    font-size: var(--text-4xl);
    color: var(--color-primary);
    margin-bottom: var(--space-md);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--space-md);
  }
  
  .title-icon {
    font-size: var(--text-5xl);
  }
  
  .section-subtitle {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
  }
  
  /* Timeline Container */
  .timeline {
    max-width: 900px;
    margin: 0 auto;
    position: relative;
  }
  
  /* Timeline Item */
  .timeline-item {
    position: relative;
    padding-left: 60px;
    margin-bottom: var(--space-3xl);
  }
  
  .timeline-item:last-child {
    margin-bottom: 0;
  }
  
  /* Timeline Dot */
  .timeline-dot {
    position: absolute;
    left: 0;
    top: 0;
    width: 24px;
    height: 24px;
    background: var(--color-primary);
    border: 4px solid var(--color-background);
    border-radius: 50%;
    box-shadow: 0 0 0 4px var(--color-primary-light);
    z-index: 2;
  }
  
  /* Timeline Line */
  .timeline-line {
    position: absolute;
    left: 11px;
    top: 24px;
    width: 2px;
    height: calc(100% + var(--space-3xl));
    background: linear-gradient(180deg, var(--color-primary) 0%, var(--color-border) 100%);
    z-index: 1;
  }
  
  /* Content Card */
  .timeline-content {
    background: var(--color-background-secondary);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-2xl);
    transition: all var(--transition-base);
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }
  
  .timeline-content:hover {
    transform: translateX(8px);
    box-shadow: var(--shadow-xl);
    border-color: var(--color-primary);
  }
  
  /* Job Header */
  .job-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    gap: var(--space-lg);
    padding-bottom: var(--space-lg);
    border-bottom: 2px solid var(--color-border);
  }
  
  .job-main {
    flex: 1;
  }
  
  .job-company {
    font-size: var(--text-2xl);
    font-weight: 700;
    color: var(--color-primary);
    margin: 0 0 var(--space-xs) 0;
  }
  
  .job-position {
    font-size: var(--text-lg);
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }
  
  .job-period {
    font-size: var(--text-sm);
    font-weight: 600;
    color: var(--color-text-secondary);
    padding: var(--space-xs) var(--space-md);
    background: var(--color-background);
    border-radius: var(--radius-md);
    border: 1px solid var(--color-border);
    white-space: nowrap;
  }
  
  /* Achievements */
  .job-achievements {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .achievements-title {
    font-size: var(--text-base);
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }
  
  .achievements-list {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin: 0;
    padding: 0;
  }
  
  .achievement-item {
    display: flex;
    align-items: flex-start;
    gap: var(--space-sm);
    font-size: var(--text-base);
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
  .achievement-bullet {
    color: var(--color-secondary);
    font-weight: 700;
    font-size: var(--text-lg);
    flex-shrink: 0;
    margin-top: 2px;
  }
  
  /* Tags */
  .job-tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
  }
  
  .tag {
    font-size: var(--text-xs);
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-background);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-sm);
    color: var(--color-text-secondary);
    font-weight: 500;
    transition: all var(--transition-fast);
  }
  
  .tag:hover {
    background: var(--color-primary);
    color: white;
    border-color: var(--color-primary);
  }
  
  /* Dark mode adjustments */
  [data-theme="dark"] .timeline-dot {
    background: #4A7FFF;
    border-color: var(--color-background);
    box-shadow: 0 0 0 4px rgba(74, 127, 255, 0.3);
  }
  
  [data-theme="dark"] .timeline-line {
    background: linear-gradient(180deg, #4A7FFF 0%, var(--color-border) 100%);
  }
  
  [data-theme="dark"] .timeline-content {
    background: var(--color-background-secondary);
  }
  
  /* Responsive */
  @media (max-width: 768px) {
    .timeline-item {
      padding-left: 40px;
    }
    
    .timeline-dot {
      width: 20px;
      height: 20px;
      border-width: 3px;
    }
    
    .timeline-line {
      left: 9px;
    }
    
    .timeline-content {
      padding: var(--space-lg);
    }
    
    .timeline-content:hover {
      transform: translateX(4px);
    }
    
    .job-header {
      flex-direction: column;
      gap: var(--space-md);
    }
    
    .job-period {
      align-self: flex-start;
    }
    
    .job-company {
      font-size: var(--text-xl);
    }
    
    .job-position {
      font-size: var(--text-base);
    }
  }
</style>